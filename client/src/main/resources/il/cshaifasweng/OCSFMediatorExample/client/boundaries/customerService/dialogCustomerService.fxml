<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="pnEmployeeArea" prefHeight="371.0" prefWidth="623.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #3a1c9d; -fx-border-width: 2px; -fx-background-radius: 10px;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.boundaries.customerService.DialogCustomerService">
   <children>
      <VBox alignment="CENTER" layoutX="3.0" layoutY="6.0" prefHeight="385.0" prefWidth="697.0" spacing="15.0" style="-fx-background-color: #FFFFFF; -fx-padding: 20;">
         <children>
            <HBox alignment="CENTER_RIGHT" prefHeight="50.0" prefWidth="700.0">
               <children>
                  <Label fx:id="purchaseTypeField" prefHeight="50.0" prefWidth="673.0" style="-fx-text-fill: #4d4c4c; -fx-padding: 10; -fx-font-size: 18;" text="Employee - Handle Purchase" />

                  <HBox alignment="CENTER" prefHeight="47.0" prefWidth="730.0" spacing="10.0">
                     <children>
                        <Label alignment="CENTER" prefHeight="17.0" prefWidth="136.0" text="Purchase Date:" textFill="#4d4c4c">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <TextField fx:id="purchaseDateField" editable="false" style="-fx-pref-width: 150; -fx-background-color: #F7F7F7; -fx-border-color: #3a1c9d;" />
                     </children>
                  </HBox>
                  <Button alignment="TOP_RIGHT" contentDisplay="CENTER" mnemonicParsing="false" onAction="#closeEmployeeArea" prefHeight="33.0" prefWidth="50.0" style="-fx-background-color: transparent; -fx-text-fill: #4d4c4c;" styleClass="button-close" text="x">
                     <font>
                        <Font size="15.0" />
                     </font></Button>
               </children>
            </HBox>

            <VBox alignment="CENTER" prefHeight="458.0" prefWidth="704.0" spacing="15.0" style="-fx-background-color: #FFFFFF;">
               <children>

                  <!-- ComboBox for Action Selection -->
                  <HBox spacing="10.0">
                     <children>
                        <Label prefHeight="17.0" prefWidth="108.0" text="Select Action:" textFill="#4d4c4c" />
                        <ComboBox fx:id="actionComboBox" onAction="#handleActionSelection" prefHeight="27.0" prefWidth="308.0" style="-fx-pref-width: 300; -fx-background-color: #F7F7F7; -fx-border-color: #3a1c9d;">
                           <items>
                              <FXCollections fx:factory="observableArrayList">
                                 <String fx:value="Compensate Financially" />
                                 <String fx:value="Issue New Ticket" />
                              </FXCollections>
                           </items>
                        </ComboBox>
                     </children>
                  </HBox>
                  <HBox spacing="10.0">
                     <children>
                        <Label text="Employee Response:" textFill="#4d4c4c" />
                        <ComboBox fx:id="employeeResponseComboBox" prefHeight="27.0" prefWidth="480.0" style="-fx-background-color: #F7F7F7; -fx-border-color: #3a1c9d;">
                           <items>
                              <FXCollections fx:factory="observableArrayList">
                                 <String fx:value="Your refund has been processed successfully." />
                                 <String fx:value="We have updated the movie details on your ticket." />
                                 <String fx:value="We apologize for the mistake. Compensation has been issued." />
                                 <String fx:value="Your movie ticket has been corrected. Enjoy the show!" />
                                 <String fx:value="We have fixed your seating issue. Please check your ticket." />
                                 <String fx:value="We apologize for the inconvenience. Compensation is on its way." />
                                 <String fx:value="The double charge has been refunded. Thank you for your patience." />
                                 <String fx:value="We are sorry about the movie quality. Compensation has been processed." />
                                 <String fx:value="Your ticket has been rescheduled as requested." />
                                 <String fx:value="We apologize for the noise. Compensation has been issued." />
                              </FXCollections>
                           </items>
                        </ComboBox>
                     </children>
                  </HBox>
                  <!-- Compensation Option -->
                  <VBox fx:id="compensateFinanciallyBox" managed="false" spacing="10.0" visible="false">
                     <HBox spacing="10.0">
                        <children>
                           <Label text="Refund Amount:" textFill="#4d4c4c" />
                           <TextField fx:id="refundAmountField" promptText="Enter amount" style="-fx-pref-width: 150; -fx-background-color: #F7F7F7; -fx-border-color: #3a1c9d;" />
                        </children>
                     </HBox>
                  </VBox>

                  <!-- Issue New Ticket Option -->
                  <VBox fx:id="issueNewTicketBox" managed="false" spacing="10.0" visible="false">
                     <HBox spacing="10.0">
                        <children>
                           <Label text="Select Movie:" textFill="#4d4c4c" />
                           <ComboBox fx:id="movieComboBox" style="-fx-pref-width: 300; -fx-background-color: #F7F7F7; -fx-border-color: #3a1c9d;" />
                        </children>
                     </HBox>
                     <HBox spacing="10.0">
                        <children>
                           <Label text="Select Date:" textFill="#4d4c4c" />
                           <ComboBox fx:id="dateComboBox" style="-fx-pref-width: 300; -fx-background-color: #F7F7F7; -fx-border-color: #3a1c9d;" />
                        </children>
                     </HBox>
                     <HBox spacing="10.0">
                        <children>
                           <Label text="Select Time:" textFill="#4d4c4c" />
                           <ComboBox fx:id="timeComboBox" style="-fx-pref-width: 300; -fx-background-color: #F7F7F7; -fx-border-color: #3a1c9d;" />
                        </children>
                     </HBox>
                  </VBox>

                  <Separator style="-fx-background-color: #4d4c4c;" />

                  <!-- Final Preview and Submit -->
                  <HBox spacing="10.0">
                     <children>
                        <Label text="Response:" textFill="#4d4c4c" />
                        <ScrollPane fx:id="finalResponseScrollPane" prefHeight="125.0" prefWidth="354.0" style="-fx-background-color: #F7F7F7; -fx-border-color: #3a1c9d;">
                           <content>
                              <TextFlow fx:id="finalResponsePreviewArea" prefHeight="126.0" prefWidth="354.0" style=": ; -fx-background-color: #F7F7F7; -fx-border-color: #3a1c9d;" />
                           </content>
                        </ScrollPane>
                     </children>
                  </HBox>

                  <Button fx:id="btnSend" onAction="#handleSubmitFinalResponse" style="-fx-background-color: #3a1c9d; -fx-font-size: 16; -fx-text-fill: #FFFFFF; -fx-border-radius: 5px;" text="Send Response" />
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
